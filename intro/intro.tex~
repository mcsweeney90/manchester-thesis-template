
\graphicspath{{intro/figs/}}

\chapter{Introduction}
\chaptermark{Introduction} 
\label{intro}

This is the introduction. Figure \ref{intro.fig} is an example figure. Figure \ref{intro.tb} is an example table. Figure \ref{intro.alg} is an example algorithm.

      \begin{figure}
	\centering	
	\includegraphics[scale=0.3]{cholesky35.png}
	\caption{This is an example figure.}	
	\label{intro.fig}
      \end{figure}

              \begin{table}
        \centering
        \caption{This is an example table.} 	
        \begin{tabular}{c c c c c}
         \toprule
         Tile size & {\tt GEMM} & {\tt POTRF} & {\tt SYRK} & {\tt TRSM} \\
         \cmidrule{1-5}
         $128$ & $8.0$ & $1.7$ & $2.3$ & $1.7$ \\
         $1024$ & $92.7$ & $13.7$ & $55.8$ & $24.2$ \\             
        \bottomrule
        \end{tabular}   
        \label{intro.tb}
        \end{table}

\begin{algorithm}	
	
	\For{$i = 1, \dots, N$}
	{
		$A_{ii} = {\tt POTRF}(A_{ii})$
		
		\For{$j = i + 1, \dots, N - 1$}{$A_{ji} = {\tt TRSM}(A_{ii}, A_{ji})$}
		
		\For{$k = i + 1, \dots, N - 1$}
		{
			$A_{kk} = {\tt SYRK}(A_{ki}, A_{kk})$
			
			\For{$j = k + 1, \dots, N - 1$}{$A_{jk} = {\tt GEMM}(A_{ji}, A_{ki}, A_{jk})$}
		}		
	}	
	
	\caption{This is an example algorithm.}
	\label{intro.alg}
      \end{algorithm} 



